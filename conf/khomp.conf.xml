<configuration name="khomp.conf" description="Khomp Configuration">

  <!-- Config for all boards -->
  <settings>
    <!-- Debug level of the endpoint module -->
    <param name="debug" value="false"/>
    <!-- Default dialplan for inbound/outbound calls -->
    <param name="dialplan" value="XML"/>
    <!-- Default context for inbound/outbound calls -->
    <param name="context" value="default"/>
  </settings>

  <profile name="New profile">
    <!-- A configuration profile (preset) -->
    <!-- What else can be define here? -->
    <param name="echo-canceller" value="false" />
    <param name="channel_search" value="ascending" />
    <param name="dialplan" value="XML"/>
    <param name="context" value="default"/>
  </profile>

  <group name="group1">
    <!-- Members are defined using REGEX (PCRE) on the format board/channel -->
    <!-- Can have several lines and allow spans to have multiple members -->
    <param name="member" value="[0-1]/[0-59]" />
  </group>

 <!-- New span definition to be used on dialplan -->
  <span id="0">
    <!-- Connect profile with group -->
    <param name="profile" value="New profile" />
    <param name="group" value="group1" />
  </span>

</configuration>
